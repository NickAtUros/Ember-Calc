<body>
  {{#each model as |current|}}

  <div class="screenDisplay">
    <h1 style="color:white">Now using {{current.name}} calculator!</h1>
    <div class="input-text ">{{operationBuffer}}</div>
    <div class="output-text">{{outputDisplay}}</div>
    <i></i>
  </div>

  <div style="padding: 16px">
    <div class=>
      <button class="operation{{current.name}}" {{action 'pressButton' 'C'}}>
        <h1>C</h1>
      </button>
      <button class="operation{{current.name}}" {{action 'pressButton' '('}}>
        <h1>(</h1>
      </button>
      <button class="operation{{current.name}}" {{action 'pressButton' ')'}}>
         <h1>)</h1>
       </button>
      <button class="operation{{current.name}}" {{action 'pressButton' '/'}}>
        <h1>/</h1>
      </button>
    </div>
    <div>
      <button class="number{{current.name}}" {{action 'pressButton' 7}}>
        <h1>7</h1>
      </button>
      <button class="number{{current.name}}" {{action 'pressButton' 8}}>
        <h1>8</h1>
      </button>
      <button class="number{{current.name}}" {{action 'pressButton' 9}}>
        <h1>9</h1>
      </button>
      <button class="operation{{current.name}}" {{action 'pressButton' '*'}}>
        <h1>x</h1>
      </button>
    </div>
    <div>
      <button class="number{{current.name}}" {{action 'pressButton' 4}}>
        <h1>4</h1>
      </button>
