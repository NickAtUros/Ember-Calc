        <h1>5</h1>
      </button>
      <button class="number{{current.name}}" {{action 'pressButton' 6}}>
        <h1>6</h1>
      </button>
      <button class="operation{{current.name}}" {{action 'pressButton' '-'}}>
        <h1>-</h1>
      </button>
    </div>
